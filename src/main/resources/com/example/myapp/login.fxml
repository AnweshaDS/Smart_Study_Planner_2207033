<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="412.0" prefWidth="502.0" spacing="15" style="-fx-background-color: #7FFFD4;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.myapp.LoginController">

    <Label prefHeight="63.0" prefWidth="189.0" style="-fx-font-size: 29px; -fx-background-color: #FFB6C1;" text="    User Login" textFill="#403232">
      <font>
         <Font size="33.0" />
      </font></Label>

    <TextField fx:id="userField" promptText="Username or Email" />
    <PasswordField fx:id="passField" promptText="Password" />

    <Button onAction="#onLogin" text="Login">
      <font>
         <Font name="System Bold" size="12.0" />
      </font></Button>
    <Button onAction="#onSignup" text="Sign Up">
      <font>
         <Font name="System Bold" size="12.0" />
      </font></Button>

</VBox>
