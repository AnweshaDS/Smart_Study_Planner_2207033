<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.myapp.RunningController">

    <top>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <Label text="Running Tasks"
                   style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

            <Region HBox.hgrow="ALWAYS"/>

            <Button text="Back" onAction="#goBack"/>
        </HBox>
    </top>

    <center>
        <VBox spacing="15" alignment="CENTER">
            <ListView fx:id="runningList" prefHeight="300"/>

            <Label text="Study Timer"
                   style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

            <Label fx:id="timerLabel"
                   text="00:00:00"
                   style="-fx-font-size: 28px; -fx-font-weight: bold;"/>
        </VBox>
    </center>

    <bottom>
        <HBox spacing="12" alignment="CENTER">
            <padding>
                <Insets bottom="12"/>
            </padding>

            <Button text="Pause" onAction="#pauseTask"/>
            <Button text="Finish" onAction="#finishTask"/>
            <Button text="Delete" onAction="#deleteTask"/>
        </HBox>
    </bottom>

</BorderPane>
