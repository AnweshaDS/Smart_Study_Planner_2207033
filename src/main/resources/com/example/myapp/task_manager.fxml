<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.myapp.TaskManagerController">

    <!-- TOP BAR -->
    <top>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <Label text="Smart Study Planner"
                   style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
            <Label fx:id="dailyTotalLabel"
                   style="-fx-font-size: 14px; -fx-font-weight: bold;"
                   text="Today Studied: 00:00:00"/>


            <Region HBox.hgrow="ALWAYS"/>

            <Button text="View DB" onAction="#onViewDB"/>
            <Button text="Logout" onAction="#onLogout"/>
        </HBox>
    </top>

    <!-- CENTER HUB -->
    <center>
        <VBox spacing="25" alignment="CENTER"
              style="-fx-background-color: #00FFFF;">
            <padding>
                <Insets top="40" right="40" bottom="40" left="40"/>
            </padding>

            <Button text="TODO"
                    prefWidth="220"
                    prefHeight="50"
                    onAction="#openTodo"/>

            <Button text="RUNNING"
                    prefWidth="220"
                    prefHeight="50"
                    onAction="#openRunning"/>

            <Button text="PAUSED"
                    prefWidth="220"
                    prefHeight="50"
                    onAction="#openPaused"/>

            <Button text="COMPLETED"
                    prefWidth="220"
                    prefHeight="50"
                    onAction="#openCompleted"/>
        </VBox>
    </center>

</BorderPane>
