<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.myapp.PausedController">

    <!-- TOP -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: #EE82EE;">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>

            <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Paused Tasks" />

            <Region HBox.hgrow="ALWAYS" />
            <Button onAction="#onBack" text="Back" />
        </HBox>
    </top>

    <!-- CENTER -->
    <center>
        <VBox spacing="10" style="-fx-background-color: #00FFFF;">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>

            <ListView fx:id="pausedList" style="-fx-background-color: #FFFFE0;" VBox.vgrow="ALWAYS" />
        </VBox>
    </center>

    <!-- BOTTOM -->
    <bottom>
        <HBox alignment="CENTER" spacing="10" style="-fx-background-color: #EE82EE;">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>

            <Button onAction="#onRun" text="Run" />
            <Button onAction="#onFinish" text="Finish" />
            <Button onAction="#onDelete" text="Delete" />
        </HBox>
    </bottom>

</BorderPane>
