<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.myapp.TodoController">

    <!-- TOP -->
    <top>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <Label text="TODO Tasks"
                   style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

            <Region HBox.hgrow="ALWAYS"/>
            <Button text="Back" onAction="#onBack"/>
        </HBox>
    </top>

    <!-- CENTER -->
    <center>
        <VBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <!-- INPUTS -->
            <HBox spacing="8">
                <TextField fx:id="titleField" promptText="Task title" HBox.hgrow="ALWAYS"/>
                <TextField fx:id="descField" promptText="Description" prefWidth="250"/>
                <TextField fx:id="plannedField" promptText="Planned time (min)" prefWidth="150"/>
                <Button text="Add Study Task" onAction="#onAddTask"/>
            </HBox>

            <!-- LIST -->
            <ListView fx:id="todoList" VBox.vgrow="ALWAYS"/>

        </VBox>
    </center>

    <!-- BOTTOM -->
    <bottom>
        <HBox spacing="10" alignment="CENTER">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <Button text="Start" onAction="#onStart"/>
            <Button text="Delete" onAction="#onDelete"/>
        </HBox>
    </bottom>

</BorderPane>
