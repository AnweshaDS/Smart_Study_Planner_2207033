<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.myapp.TodoController">

    <!-- TOP -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: #EE82EE;">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>

            <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="TODO Tasks" />

            <Region HBox.hgrow="ALWAYS" />
            <Button onAction="#onBack" text="Back" />
        </HBox>
    </top>

    <!-- CENTER -->
    <center>
        <VBox spacing="10">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>

            <!-- INPUTS -->
            <HBox spacing="8">
                <TextField fx:id="titleField" promptText="Task title" HBox.hgrow="ALWAYS" />
                <TextField fx:id="descField" prefWidth="250" promptText="Description" />
                <TextField fx:id="plannedField" prefWidth="150" promptText="Planned time (min)" />
                <Button onAction="#onAddTask" text="Add Study Task" />
            </HBox>

            <!-- LIST -->
            <ListView fx:id="todoList" style="-fx-background-color: #00FFFF;" VBox.vgrow="ALWAYS" />

        </VBox>
    </center>

    <!-- BOTTOM -->
    <bottom>
        <HBox alignment="CENTER" spacing="10" style="-fx-background-color: #EE82EE;">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>

            <Button onAction="#onStart" text="Start" />
            <Button onAction="#onDelete" text="Delete" />
        </HBox>
    </bottom>

</BorderPane>
