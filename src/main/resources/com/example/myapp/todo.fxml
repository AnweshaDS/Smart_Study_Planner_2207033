<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.myapp.TodoController">

    <!-- TOP -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: #EE82EE;">
            <padding>
                <Insets top="10" bottom="10" left="10" right="10"/>
            </padding>

            <Label text="TODO Tasks"
                   style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

            <Region HBox.hgrow="ALWAYS"/>
            <Button text="Back" onAction="#onBack"/>
        </HBox>
    </top>

    <!-- CENTER -->
    <center>
        <VBox spacing="10">
            <padding>
                <Insets top="10" bottom="10" left="10" right="10"/>
            </padding>

            <!-- INPUT ROW -->
            <HBox spacing="8">
                <TextField fx:id="titleField"
                           promptText="Task title"
                           HBox.hgrow="ALWAYS"/>

                <TextField fx:id="targetField"
                           promptText="Target HH:MM:SS"
                           prefWidth="130"/>

                <TextField fx:id="studyField"
                           promptText="Study HH:MM:SS"
                           prefWidth="130"/>

                <TextField fx:id="breakField"
                           promptText="Break HH:MM:SS"
                           prefWidth="130"/>

                <Button text="Add Task" onAction="#onAddTask"/>
            </HBox>

            <!-- LIST -->
            <ListView fx:id="todoList"
                      VBox.vgrow="ALWAYS"
                      style="-fx-background-color: #00FFFF;"/>
        </VBox>
    </center>

    <!-- BOTTOM -->
    <bottom>
        <HBox alignment="CENTER" spacing="12" style="-fx-background-color: #EE82EE;">
            <padding>
                <Insets top="10" bottom="10"/>
            </padding>

            <Button text="Start" onAction="#onStart"/>
            <Button text="Delete" onAction="#onDelete"/>
        </HBox>
    </bottom>

</BorderPane>
