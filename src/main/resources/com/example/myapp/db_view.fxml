<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/25" fx:controller="com.example.myapp.DBViewController">

    <top>
        <HBox spacing="10" style="-fx-padding: 10;">
            <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Task Database Viewer" textFill="#6b2c2c" />
            <Region HBox.hgrow="ALWAYS" />
            <Button onAction="#onBack" text="Back" />
        </HBox>
    </top>

    <center>
        <TableView fx:id="table" prefHeight="400" prefWidth="600">
            <columns>
                <TableColumn fx:id="colId" prefWidth="50" text="ID" />
                <TableColumn fx:id="colTitle" prefWidth="150" text="Title" />
                <TableColumn fx:id="colDesc" prefWidth="150" text="Description" />
                <TableColumn fx:id="colStatus" prefWidth="100" text="Status" />
                <TableColumn fx:id="colPlanned" prefWidth="100" text="Planned Time" />
                <TableColumn fx:id="colSpent" prefWidth="100" text="Spent Time" />
            </columns>
        </TableView>
    </center>

</BorderPane>
