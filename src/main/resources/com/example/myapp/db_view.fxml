<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.myapp.DBViewController">
    <top>
        <HBox alignment="CENTER_LEFT">
            <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
            <Label text="Database Viewer" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="Back" onAction="#onBack"/>
        </HBox>
    </top>

    <center>
        <TableView fx:id="table">
            <columns>
                <TableColumn fx:id="colId" text="ID" prefWidth="60"/>
                <TableColumn fx:id="colTitle" text="Title" prefWidth="220"/>
                <TableColumn fx:id="colDesc" text="Description" prefWidth="260"/>
                <TableColumn fx:id="colStatus" text="Status" prefWidth="110"/>
                <TableColumn fx:id="colPlanned" text="Planned" prefWidth="80"/>
                <TableColumn fx:id="colSpent" text="Spent" prefWidth="80"/>
            </columns>
        </TableView>
    </center>
</BorderPane>
